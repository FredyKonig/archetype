<tr>
  <th style="width: 10px"></th>
  <% attributes.for(:index).take(10).each do |attribute| %>
    <th>
      <% if resourceful.sortable?(attribute.name) %>
        <%= link_to attribute.label, {sort_by: attribute.name, sort_direction: resourceful.sort_direction(attribute.name)} %>
      <% else %>
        <%= attribute.label %>
      <% end %>
    </th>
  <% end %>
  <th></th>
</tr>
