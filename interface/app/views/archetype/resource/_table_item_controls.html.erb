<%= link_to 'View', table_item, class: 'btn btn-sm btn-default' if resourceful.can_show? %>
<%= link_to 'Edit', [:edit, table_item], class: 'btn btn-sm btn-primary' if resourceful.can_edit? %>
<%= link_to 'Delete', [table_item], class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this entry?'} if resourceful.can_destroy? %>
