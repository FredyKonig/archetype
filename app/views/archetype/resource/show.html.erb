<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    <%= interface.title %>
    <small>preview of simple tables</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li><a href="#">Tables</a></li>
    <li class="active">Simple</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title"><%= resourceful.resource.name %></h3>
        </div><!-- /.box-header -->
        <div class="box-body">
          <dl class="dl-horizontal">
            <% resourceful.attributes(:show).each do |attribute| %>
              <dt><%= attribute.label %></dt>
              <dd><%= attribute.from(resourceful.resource) %></dd>
            <% end %>
          </dl>
        </div><!-- /.box-body -->
        <div class="box-footer clearfix">
          <div class='pull-right'>
            <%= link_to 'Back', resource_class, class: 'btn btn-sm btn-default' %>
            <a class="btn btn-sm btn-primary">Edit</a>
            <a class="btn btn-sm btn-danger">Delete</a>
          </div>
        </div>
      </div><!-- /.box -->

    </div><!-- /.col -->
  </div><!-- /.row -->
</section><!-- /.content -->

